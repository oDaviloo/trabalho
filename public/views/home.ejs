    <style>
        /* Estilo personalizado para ajustar a largura das imagens no carousel */
        .carousel-item img {
            max-height: 300px;
            /* Altura desejada */
            max-width: 350px;
            /* Largura máxima para manter a proporção */
            display: block;
            /* Exibir a imagem como um bloco */
            margin: auto;
            /* Centralizar a imagem horizontalmente */
        }
    </style>

    <div id="carouselExampleDark" class="carousel carousel-dark slide" data-bs-ride="carousel">
        <div class="carousel-indicators">
            <% produtos.forEach((produto, index)=> { %>
                <button type="button" data-bs-target="#carouselExampleDark" data-bs-slide-to="<%= index %>" <% if
                    (index===0) { %> class="active" <% } %> aria-label="Slide <%= index + 1 %>"></button>
                <% }); %>
        </div>
        <div class="carousel-inner">
            <% produtos.forEach((produto, index)=> { %>
                <div class="carousel-item <%= index === 0 ? 'active' : '' %>" data-bs-interval="10000">
                    <a href="/produtos/<%= produto.id %>"> <!-- Link temporário -->
                        <img src="data:image/png;base64,<%= produto.foto %>" class="d-block w-100" alt="...">
                    </a>
                    <div class="carousel-caption d-none d-md-block">
                        <h5>
                            <%= produto.nome_produto %>
                        </h5>
                        <p>
                            <%= produto.descricao %>
                        </p>
                    </div>
                </div>
                <% }); %>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleDark" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleDark" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>




    <div class="container mt-5">
        <h2>Produtos em Destaque</h2>
        <div class="row mt-4" id="destaqueProdutos">
            <% for (let i=0; i < produtos.length; i++) { %>
                <div class="col-md-4 mb-3">
                    <div class="card mb-3" style="max-width: 540px;">
                        <div class="row g-0">
                            <div class="col-md-4">
                                <a href="/produtos/<%= produtos[i].id %>">
                                    <!-- Atualização para utilizar a imagem no formato base64 -->
                                    <img src="data:image/jpeg;base64, <%= produtos[i].foto %>"
                                        class="img-fluid rounded-start" alt="<%= produtos[i].nome_produto %>">
                                </a>
                            </div>
                            <div class="col-md-8">
                                <div class="card-body">
                                    <h5 class="card-title">
                                        <%= produtos[i].nome_produto %>
                                    </h5>
                                    <p class="card-text">
                                        <%= produtos[i].descricao %>
                                    </p>
                                    <!-- Adicione outras informações do produto, como preço, quantidade, etc. -->
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <% } %>
        </div>
    </div>


    <script>
       document.addEventListener('DOMContentLoaded', function () {
    const searchForm = document.getElementById('searchForm');
    const searchBar = document.getElementById('searchBar');

    // Adiciona um evento de envio no formulário de pesquisa
    searchForm.addEventListener('submit', function (event) {
        event.preventDefault(); // Previne o comportamento padrão de enviar o formulário

        const searchTerm = searchBar.value.trim(); // Captura o valor digitado na barra de pesquisa
        if (searchTerm !== '') {
            window.location.href = `/pesquisar/${searchTerm}`; // Redireciona para a rota de pesquisa com o termo de pesquisa como parâmetro
        }
    });
});
    </script>
    


    <script>
        // Captura o evento de clique nos itens do dropdown
        const dropdownItems = document.querySelectorAll('.dropdown-item');
        dropdownItems.forEach(item => {
            item.addEventListener('click', function (event) {
                event.preventDefault(); // Previne o comportamento padrão do link

                // Obtém o nome da categoria do ID do item clicado
                const categoryName = item.getAttribute('id');

                // Redireciona para a rota '/categorias' incluindo a variável da categoria na URL
                window.location.href = `/categorias/${categoryName}`; // Ajuste nesta linha
            });
        });
    </script>


    <script>
        // Adiciona um evento de clique aos cards de produto em destaque
        document.querySelectorAll('.card-link').forEach(item => {
            item.addEventListener('click', function (event) {
                event.preventDefault(); // Previne o comportamento padrão do link
                const nomeProduto = extrairNomeDoTituloProduto(item); // Extrai o nome do produto do título do card
                console.log('Nome do produto clicado:', nomeProduto);
                // Aqui você pode fazer o que deseja com o nome do produto, como armazená-lo em uma variável ou enviar para o backend
                // Redirecionamento ou outra ação necessária com o nome do produto clicado
            });
        });

        // Função para extrair o nome do produto do título do card
        function extrairNomeDoTituloProduto(item) {
            // Extrai o texto do título do card
            const tituloProduto = item.querySelector('.produto-title').innerText;
            return tituloProduto; // Retorna o texto do título como o nome do produto
        }

        // Captura o nome do produto ao clicar no link do carousel
        document.querySelectorAll('.carousel-caption h5').forEach(item => {
            item.addEventListener('click', function (event) {
                event.preventDefault(); // Previne o comportamento padrão do link
                const nomeProdutoCarousel = item.innerText;
                console.log('Nome do produto do carousel clicado:', nomeProdutoCarousel);
                // Aqui você pode fazer o que deseja com o nome do produto do carousel
            });
        });
    </script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Inicializar o carousel
            var myCarousel = document.querySelector('#carouselExampleCaptions');
            var carousel = new bootstrap.Carousel(myCarousel, {
                interval: 5000, // Intervalo de tempo para troca de slides (opcional)
                wrap: true // Permitir a rolagem cíclica dos slides (opcional)
            });
        });
    </script>
