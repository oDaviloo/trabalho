    <script>
        // Adiciona um evento de clique aos cards de categoria em destaque
        document.querySelectorAll('.card-categoria a').forEach(item => {
            item.addEventListener('click', function (event) {
                event.preventDefault(); // Previne o comportamento padrão do link
                const categoriaNome = extrairNomeDoTitulo(item); // Extrai o nome da categoria do título do card
                redirecionarParaCategorias(categoriaNome);
            });
        });

        // Função para enviar o nome da categoria para a página categorias.ejs
        function redirecionarParaCategorias(categoriaNome) {
            // Aqui você pode redirecionar para a página categorias.ejs e passar o nome da categoria como parâmetro
            // Substitua a URL conforme necessário
            window.location.href = `/categorias?categoria=${categoriaNome}`;
        }

        // Função para extrair o nome da categoria do título do card
        function extrairNomeDoTitulo(item) {
            // Extrai o texto do título do card
            const titulo = item.querySelector('.card-title').innerText;
            return titulo; // Retorna o texto do título como o nome da categoria
        }
    </script>


