<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Perfil do Usuário</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css">
</head>
<body>


<!-- Navbar -->
<nav class="navbar navbar-expand-lg navbar-dark bg-dark navbar-custom">
    <div class="container-fluid">
        <a class="navbar-brand" href="views/home">
            <img src="../images/perfeitinha2.svg" width="200" height="45" class="d-inline-block align-top" alt="Logo">
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
            <ul class="navbar-nav">

                <li class="nav-item">
                    <a class="nav-link" href="/views/home">Página incial</a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" style="color: white;" href="/perfil">
                        <%= message.username %>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" style="color: white;" href="/logout">Sair</a>
                </li>
            </ul>
        </div>
    </div>
</nav>



    <div class="container mt-5">
        <h1 class="text-center">Perfil do Usuário</h1>
        <div class="row justify-content-center mt-5">
            <div class="col-md-6">
                <form id="updateForm" action="/update_profile" method="POST">
                    <div class="form-group">
                        <label for="nome">Nome:</label>
                        <input type="text" class="form-control" name="nome" value="<%= message ? message.username : '' %>" required>
                    </div>
                    <div class="form-group">
                        <label for="idade">Idade:</label>
                        <input type="number" class="form-control" name="idade" value="<%= message ? message.idade : '' %>" required>
                    </div>
                    <div class="form-group">
                        <label for="cidade">Cidade:</label>
                        <input type="text" class="form-control" name="cidade" value="<%= message ? message.cidade : '' %>" required>
                    </div>
                    <div class="form-group">
                        <label for="estado">Estado:</label>
                        <input type="text" class="form-control" name="estado" value="<%= message ? message.estado : '' %>" required>
                    </div>
                    <div class="form-group">
                        <label for="senha">Nova Senha:</label>
                        <input type="password" class="form-control" name="senha">
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Atualizar Perfil</button>
                        <button id="deleteBtn" class="btn btn-danger ml-2">Excluir Perfil</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script>
        $(document).ready(function() {
            // Adicione aqui a lógica para excluir o perfil quando o botão for clicado
            $('#deleteBtn').on('click', function() {
                if (confirm('Tem certeza que deseja excluir seu perfil?')) {
                    $('#updateForm').attr('action', '/delete_profile').submit();
                }
            });
        });
    </script>
</body>
</html>
